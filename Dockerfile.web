# Stage 1: Base runtime environment
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

# Install curl for debugging and health check purposes (remove if unnecessary after debugging)
RUN apt-get update && apt-get install -y curl

# Set ASP.NET Core to listen on port 80
ENV ASPNETCORE_URLS=http://+:80

# Stage 2: Build environment
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy project file and restore dependencies
COPY ["src/PMS.Web/PMS.Web.csproj", "PMS.Web/"]
RUN dotnet restore "PMS.Web/PMS.Web.csproj"

# Copy the rest of the application source code and build
COPY src/ .
WORKDIR "/src/PMS.Web"
RUN dotnet publish -c Release -o /app/build

# Stage 3: Final image
FROM base AS final
WORKDIR /app

# Copy the build output from the build stage
COPY --from=build /app/build .

# Define a health check to verify the app is running
HEALTHCHECK --interval=30s --timeout=10s \
  CMD curl --fail http://localhost:80 || exit 1

# Run the application
ENTRYPOINT ["dotnet", "PMS.Web.dll"]